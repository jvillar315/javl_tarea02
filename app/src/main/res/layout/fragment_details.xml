<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen del Personaje -->
        <ImageView
            android:id="@+id/imageCharacter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/character_image"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:gravity="center_horizontal"/>

        <!-- Nombre del Personaje -->
        <TextView
            android:id="@+id/nameCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:text="Nombre del Personaje"
            android:gravity="center_horizontal"/>

        <!-- Descripción -->
        <TextView
            android:id="@+id/descriptionCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"
            android:text="Aquí irá la descripción del personaje."
            android:gravity="center_horizontal"/>

        <!-- Habilidades -->
        <TextView
            android:id="@+id/abilitiesCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"
            android:text="Habilidades del personaje: Detalle 1, Detalle 2..."
            android:gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
